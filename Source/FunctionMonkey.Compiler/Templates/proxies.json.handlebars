{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        {{#each .}}
        {{#if @index}},{{/if}}"{{Name}}Proxy": {
            "matchCondition": {
                "route": "{{Route}}",
                "methods": [
                    {{{httpVerbs}}}
                ]
            },
            {{#if IsOpenApiYaml}}
            "backendUri": "%ProxyPrefix%/api/OpenApiProvider?name=openapi.yaml"
            {{else}}
            "backendUri": "%ProxyPrefix%/api/{{Name}}{{#if IsOpenApiUi}}?name={name}{{/if}}"
            {{/if}}            
        }
        {{/each}}
    }
}
